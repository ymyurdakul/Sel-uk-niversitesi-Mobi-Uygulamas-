<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#686486</item>
        <item name="colorButtonNormal">#0ce</item>
        <item name="colorControlActivated">@color/design_default_color_primary_variant</item>

    </style>
    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="MainNavigationButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">60dp</item>
       <item name="iconSize">19dp</item>
        <item name="android:textSize">10dp</item>
        <item name="iconTint">@color/colorDarkRed</item>
        <item name="android:textColor">@color/colorDarkRed</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeColor">@color/colorDarkRed</item>
        <item name="shapeAppearance">@style/Rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">5dp</item>
        <item name="rippleColor">#222</item>


    </style>
    <style name="SegmentedButton" parent="MainNavigationButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/customBlue</item>
        <item name="android:textColor">@color/customBlue</item>
        <item name="iconTint">@color/customBlue</item>

    </style>
    <style name="TopNavigationStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/toolbarcustom</item>

        <item name="android:elevation">10dp</item>

    </style>

</resources>
